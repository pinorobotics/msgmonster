public class ${serviceName}ServiceDefinition
        implements ServiceDefinition<${serviceName}RequestMessage, ${serviceName}ResponseMessage> {
    private static final MessageDescriptor<${serviceName}RequestMessage> REQUEST_MESSAGE_DESCRIPTOR =
            new MessageDescriptor<>(${serviceName}RequestMessage.class);
    private static final MessageDescriptor<${serviceName}ResponseMessage> RESPONSE_MESSAGE_DESCRIPTOR =
            new MessageDescriptor<>(${serviceName}ResponseMessage.class);

    @Override
    public MessageDescriptor<${serviceName}RequestMessage> getServiceRequestMessage() {
        return REQUEST_MESSAGE_DESCRIPTOR;
    }

    @Override
    public MessageDescriptor<${serviceName}ResponseMessage> getServiceResponseMessage() {
        return RESPONSE_MESSAGE_DESCRIPTOR;
    }
}
